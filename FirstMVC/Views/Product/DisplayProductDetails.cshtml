<div class="card" style="width:400px">
    <img class="card-img-top" src="/Image/@Model.Image" alt="Card image">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">
            @Model.Description<br />
            <strong>Price:</strong> @Model.Price
        </p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">See All Products</a>
    </div>
</div>
