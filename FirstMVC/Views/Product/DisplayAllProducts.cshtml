<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Price</th>
			<th>Image</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Product product in Model)
		{
			<tr>
				<td>@product.Id</td>
				<td>@product.Name</td>
				<td>@product.Price</td>
				<td><img src="/Image/@product.Image" style="width:50px; height:50px"/></td>
				<td>@product.Description</td>
			</tr>
		}
	</tbody>
</table>
